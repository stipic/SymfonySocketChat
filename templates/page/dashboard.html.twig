{% extends 'base.html.twig' %}

{% block body %}
    
    {% if is_granted('ROLE_ADMIN') %}
        <div><a href="/conversation/new">Create new conversation</a></li></div>
    {% endif %}
    
    <ul>
        {% for conversation in conversations %}

            <li><a href="/conversation/{{ conversation.id }}">{{ conversation.name }}</a>
        
        {% endfor %}
    </ul>

    <div>Users:</div>
    <ul>
        {% for user in users %}
            <li>{{ user.username }}</li>
        {% endfor %}
    </ul>

{% endblock %}